{
  "name": "streetsupport-platform-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run sentry:sourcemaps",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org honeycombsoft-xl --project node-express ./dist && sentry-cli sourcemaps upload --org honeycombsoft-xl --project node-express ./dist"
  },
  "dependencies": {
    "@sentry/cli": "^2.53.0",
    "@sentry/node": "^10.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-oauth2-jwt-bearer": "^1.6.1",
    "mongoose": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}