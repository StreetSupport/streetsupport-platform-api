{
  "name": "streetsupport-platform-api",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc && npm run sentry:sourcemaps",
    "start": "node dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "test": "jest --passWithNoTests",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org street-support-network --project streetsupport-platform-api ./dist && sentry-cli sourcemaps upload --org street-support-network --project streetsupport-platform-api ./dist"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.31.0",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/cli": "^2.58.4",
    "@sentry/node": "^10.38.0",
    "@types/jsonwebtoken": "^9.0.10",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-oauth2-jwt-bearer": "^1.7.4",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.23.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.13",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
